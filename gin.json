{
  "report": false,
  "transformers": [
    {
      "transformer": "Http.Server",
      "syncs": "Http.Responder",
      "excepts": "Http.Responder"
    },
    {
      "transformer": "String.Route",
      "parameters": {
        "stash": "request.method",
        "routes": {
          "GET": "GetHandler",
          "POST": "PostHandler"
        }
      }
    },
    {
      "transformer": "Http.Responder",
      "links": []
    },

    // GET handling
    {
      "id": "GetHandler",
      "transformer": "Resource.Open",
      "parameters": "/http/uploader.html",
      "links": "Http.Responder"
    },

    // POST handling
    {
      "id": "PostHandler",
      "transformer": "InputStream.ToPath",
      "parameters": "/tmp/foo"
    }
  ]
}